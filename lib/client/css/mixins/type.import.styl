type-size(font line = 1.3)
  font-size unit(font 'px')
  font-size unit(font/10 'rem')
  line-height unit(line 'em')

type-secondary(important = false)
  if important
    color color-type-secondary !important
  else
    color color-type-secondary

remify(value)
    u = unit(value)

    if u is 'px'
      return unit(value/10 'rem')
    else
      return unit(value u)

type-serif(weight = 300, important = false)
  if important
    font-family "grad", "georgia", serif !important
    font-weight weight !important
  else
    font-family "grad", "georgia", serif
    font-weight weight

type-sans(weight = 300)
  font-family "proxima-nova-condensed", "proxima nova condensed", "helvetica neue", "helvetica", "arial", sans-serif
  font-weight weight

type-serif-bold()
  serif 600

type-sans-bold()
  type-sans 600

type-xsmall()
  type-size 13

type-small()
  type-size 15 1.5

type-medium()
  type-size 18 1.4

type-large()
  type-size 24 1.3

type-xlarge()
  type-size 32 1.3

type-huge()
  type-size 44 1.2

type-xhuge()
  type-size 60 1

type-sans-uppercase()
  type-sans-bold()
  text-transform uppercase

type-header()
  type-serif(600)
  text-transform capitalize

type-ui()
  type-sans-bold()
  type-med()
