.flash-messages
  position: fixed
  width: 100%
  top: g-header-height - 1rem
  left: 0
  pointer-events: none

  .alert
    @extend .type-serif
    @extend .type-medium
    pointer-events: auto
    max-width: 40rem
    margin: 0 auto
    position: relative
    box-shadow: 0 0.1rem 1rem rgba(color-black, 0.25)
    padding: 1rem 1.5rem
    padding-right: 3rem
    border-radius: ui-border-radius

  .close
    position: absolute
    top: 50%
    right: 1rem
    margin-top: -0.5em
    @extend .type-xlarge
    line-height: 1em
    color: color-link
    border: 0
    cursor pointer

  .alert-danger
  .alert-warning
    background-color: color-light

  .alert-success
  .alert-info
    background-color: color-light
