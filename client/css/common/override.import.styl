.grid-module,
.at-form
  padding: 0
  margin: 0

.at-form
  .at-pwd-link
    font-size: 26px
    text-align: center
    width: 100%
    float: none

// twitter type ahead
.twitter-typeahead
  vertical-align: top
  .tt-dataset
    background-color: #FFF
    color: #444
    width: 100%
  .tt-selectable
    padding-bottom: 0
    &:hover
      cursor: pointer
  .tt-suggestion
    padding: 0.25em 1em
    border-bottom: solid 1px color-border
    &:hover
      background-color: color-brand
      color: color-type-light
    &:last-child
      border: none


