hero-mask                          = rgba(66, 46, 60, 0.8)
control-mask                       = rgba(38, 15, 30, 0.3)
control-mask-mobile                = rgba(38, 15, 30, 0.85)

/*************************************************
 * BORDERS
 *************************************************/
border-style = 0.1rem solid
border = border-style color-border
border-light= border-style color-border-light


/*************************************************
 * UI
 *************************************************/
ui-padding = 1.5em
ui-border-radius = 0.2rem
ui-input-border = border-style color-grey-light

ui-form-checkbox-size = 2rem

ui-height-default = 4.5rem
ui-small-height = 3rem
ui-xsmall-height = 2.25rem
ui-large-height = 6rem
ui-btn-secondary-border = border-style #e5e5e5


/*************************************************
 * MODULES
 *************************************************/
mod-section-header-divide-width = 7.5rem
