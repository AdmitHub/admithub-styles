
// GLOBAL
base-font-family = ''
base-font-size = 10px
base-font-size-xsm = 8px
img-path = '/packages/admithub_admithub-telescope-theme/public/img/'
space = 0.5rem
row-space = (space*2)


/*************************************************
 * TYPOGRAPHY
 *************************************************/
// typekit
tk-head = "proxima-nova"
tk-body = "adobe-caslon-pro"

// font family stack
font-sans = tk-head, "helvetica neue", "helvetica", "arial", sans-serif
font-serif = tk-body, "georgia", serif

layout-space = 1.4rem
l-gutter = space*6

grid-gutter = layout-space*2
grid-width = 145rem
grid-page-gutter = 4.5rem
grid-page-gutter-mobile = grid-page-gutter*0.75

g-header-height = 5.7rem
g-header-row-height = g-header-height*0.65
g-header-search-height = 3.5rem
g-header-search-mobile-height = 5rem
g-header-search-input-padding = 2rem
g-header-nav-space = 0.75rem
g-header-touts-sponsor-height = 3rem

comment-avatar-width = 4.5rem
comment-width = 75rem


/*************************************************
 * COLORS
 *************************************************/
color-light                        = #fff
color-black                        = #000
color-grey-xxlight                 = #f5f2f4
color-grey-xlight                  = #f5f5f5
