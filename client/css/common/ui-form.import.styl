.ui-form-phone
  max-width: 15.5rem

.fieldset-heading
  border-bottom: border
  padding-bottom: row-space
  margin-bottom: row-space

form
  .form-actions
    border-top: border
    margin-top: 3rem
    padding-top: 3rem

