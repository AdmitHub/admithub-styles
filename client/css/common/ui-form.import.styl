    .controls
      margin-left: 20rem

      label
        display: block

      input[type="text"]
      input[type="email"]
      textarea
        width: 100%

      textarea
        min-height: 15rem


.at-error
  color: color-red

.ui-form-input-submit
  border-bottom-left-radius 0
  border-top-left-radius 0
  margin-left: -0.1rem

