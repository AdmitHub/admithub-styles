form
  .ui-f-input
  #editor.controls iframe
  input[type="text"]
  input[type="password"]
  input[type="email"]
  textarea
    height: 4.5rem
    border-radius: ui-border-radius
    display: inline-block
    vertical-align: middle
    @extend .type-serif
    padding: 0 1em
    // background-color: color-grey-xlight
    border: border
    color: color-type
    text-shadow 0 0 0 rgba(color-light, 0)

    &:focus
      box-shadow: 0 0 0 rgba(color-light, 0)
      border: border-focus

    &.ui-form-small
      height: 3rem

  .comment-field
    width: 100%
    padding: 0
    margin-bottom: (space*2)

.ui-form-phone
  max-width: 15.5rem

.fieldset-heading
  border-bottom: border
  padding-bottom: row-space
  margin-bottom: row-space

form
  .form-actions
    border-top: border
    margin-top: 3rem
    padding-top: 3rem

    a
      float: left

    input
      float: right

  .control-group, .form-group
    margin-bottom: 2rem

    > label
      font-weight: bold
      float: left

    .note
      text-align: right
      @extend .type-secondary

    .controls
      margin-left: 20rem

      label
        display: block

      input[type="text"]
      input[type="email"]
      textarea
        width: 100%

      textarea
        min-height: 15rem


.at-error
  color: color-red

.ui-form-input-submit
  border-bottom-left-radius 0
  border-top-left-radius 0
  margin-left: -0.1rem

/*************************************************
 * FROM college-chooer/client/css/common
 *************************************************/

.error-text
  @extend .type-small
  color: color-red

div.checker
  dim(ui-form-checkbox-size)
  span
    border-radius: ui-border-radius
    box-shadow: inset 0 0.1rem 0.15rem rgba(color-black, 0.35)
    color: color-light
    font-size: 1.25rem
    dim(ui-form-checkbox-size)
    background-color: color-ui-form-input

    &.checked
      background-color: color-brand-cool
      box-shadow: none
      iconify(check)

      &:before
        line-height: ui-form-checkbox-size

.ui-form-checkbox-text
  @extend .type-small
  line-height: ui-form-checkbox-size
  margin-left: space

input[type="text"]
input[type="email"]
input[type="password"]
input[type="number"]
textarea
div.selector
  padding: 0 2rem
  line-height: ui-height-default
  height: ui-height-default
  margin: 0
  border-radius: ui-border-radius
  border: ui-btn-secondary-border
  box-shadow: inset 0 0.2rem 0.2rem rgba(color-black, 0.1)
  background-color: color-ui-form-input
  outline 0

  @media mq-sm
    min-width: 30rem

textarea
  min-height: 7.5rem
  padding: 1rem 2rem
  @extend .type-medium
  max-width: 100%

div.selector
  padding: 0
  position: relative
  iconify(carat-down)

  &:before
    position: absolute
    right: space*4
    font-size: 1rem
    top: 50%
    margin-top: -0.5em
    line-height: 1em

  span
  select
    padding: 0 2rem
    height: ui-height-default
    line-height: ui-height-default

.ui-form-actions
  margin-top: space*8

.ui-form-control-label
  @extend .type-serif
  font-weight: bold
  text-transform: capitalize
  display: block
  margin-bottom: space

.ui-form-help-block
  @extend .type-small
  @extend .type-secondary
  margin-top: space

.ui-form-help-block
  display: block

.has-error
  .ui-form-help-block
    color: red
  input
  input[type='text']
    border-color: red

.ui-form-group
  margin-bottom: space*4

