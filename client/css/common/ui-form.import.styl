form
  .ui-f-input
  #editor.controls iframe
  input[type="text"]
  input[type="password"]
  input[type="email"]
  textarea
    height: 4.5rem
    border-radius: ui-border-radius
    display: inline-block
    vertical-align: middle
    @extend .type-serif
    padding: 0 1em
