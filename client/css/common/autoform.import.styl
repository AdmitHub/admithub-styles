form
  .form-group
    position relative

  .form-group .control-label
    float none
    position absolute
    top -1.5ex
    left 0.5em
    padding 0 0.25em 0.25em
    color color-brand
    display block
    background-color color-grey-xxlight

  .form-group .form-control
    border 1px solid color-brand
    border-radius 2px
    text-shadow none
    box-shadow none
    width 100%
    height 4.5rem
    padding 0 1em
    min-width initial

  .panel
    margin-bottom 2rem


  // Checkboxes

  input[type='checkbox']
    position relative
    appearance none
    background-color color-grey-light
    border-radius 2px
    width 1em
    height 1em
    vertical-align middle

  input[type='checkbox']:checked
    background-color color-active
    &:before
      position absolute
      top 0.25em
      left 0.15em
      content ""
      width 0.5em
      height 0.2em
      border-bottom 3px solid color-brand
      border-left 3px solid color-brand
      transform rotate(-45deg)
