.btn-main
  @extend .type-sans
  type-size(12, 1.3)
  display inline-block
  color color-brand
  background-color color-active
  border-radius 2px
  padding 0.5rem 1rem
  vertical-align middle
  .small
    font-size 1rem
    line-height 0.25rem

.btn-add
  @extend .btn-main
  padding 0.33rem 0.75rem
  
.btn-edit
  @extend .type-mono
  @extend .type-xsmall
  display inline-block
  color color-grey-light
  text-transform uppercase
  font-weight bold