.btn
  @extend .type-sans
  type-size(14, 1.3)
  font-weight bold
  text-transform uppercase
  padding 1rem 3rem
  border 0
  &.small
    type-size(12, 1.3);
    padding 0.5rem 1rem

.btn-main
  @extend .btn
  display inline-block
  color color-brand
  background-color color-active
  border-radius 2px
  vertical-align middle
  .small
    font-size 1rem
    line-height 0.25rem

.btn-add
  @extend .btn-main
  padding 0.33rem 0.75rem

.btn-normal
  @extend .btn-main
  background-color color-brand-cool
  color color-light

.btn-edit
  @extend .type-mono
  @extend .type-xsmall
  display inline-block
  color color-grey-light
  text-transform uppercase
  font-weight bold