.g-footer
  @extend .type-sans
  @extend .type-small
  @extend .clearfix
  padding: 1em 0
  background: color-brand
  margin-top: 2em

  @media mq-med
    .g-footer-links-social
      column(6/12)
      text-align: right

    .g-footer-links-company
      column(6/12)

.g-footer-link
  display: inline-block
  color: color-text-light
  text-transform: uppercase
  margin-right: 2em
  font-weight: bold
  font-size: 1.2rem
  &:hover
    color: color-brand-cool

.g-footer-copyright
  background: color-brand
  color: color-text-light
  p
    font-style: italic
    margin-bottom: 0
    line-height: grid-page-gutter

